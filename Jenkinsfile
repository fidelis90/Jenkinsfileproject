pipeline {
   agent any

   stages {
      stage("build") {
        steps{
          echo "This is the building the application"
        }
      
      }
      stage("Test") {
        steps{
          echo "This is the testing the application"
        }
      }
      stage("Deploy") {
        steps{
          echo "This is deploying the application"
        }
      }
   
   }
 
}
